{
	"editor.formatOnSave": true,
	"terminal.integrated.shell.linux": "zsh",
	"editor.codeActionsOnSave": {
		"source.fixAll.markdownlint": true
	},
	"files.associations": {
		".dependencies": "yaml",
		".tags": "yaml",
		"*.preset": "yaml"
	},
	"shellcheck.ignorePatterns": {
		"**/*.zsh": true,
		"**/colormap": true,
		"**/.zshrc": true
	},
	"editor.rulers": [
		{ "column": 80, "color": "#ffffff10" },
		{ "column": 120, "color": "#6666668e" }
	]
}
