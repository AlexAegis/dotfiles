#compdef _dot dot

function _dot {
    local line

    _arguments -C \
        "-h[Show help information]" \
        "--h[Show help information]" \
        "1: :(quietly loudly)" \
        "*::arg:->args"

    case $line[1] in
        loudly)
            _dot_loudly
        ;;
        quietly)
            _dot_quietly
        ;;
    esac
}

function _dot_quietly {
    _arguments \
        "--silent[Dont output anything]"
}

function _dot_loudly {
    _arguments \
        "--repeat=[Repat the <message> any number of times]"
}
