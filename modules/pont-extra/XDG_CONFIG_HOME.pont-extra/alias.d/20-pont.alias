#!/bin/sh

alias cdot='cd $DOTFILES_HOME'
alias codot='code $DOTFILES_HOME'
alias pontpull="pont -p" # Pull dotfiles home
alias pontup="pont -iu" # Update all installed
alias pontre="pont -ox" # Re-execute outdated ones
alias pontfi="pont -fx" # Force execute a single module
alias pontexp="pont -qeL" # Expand then list. To check the dependency tree
alias pontabs="pont -qnL" # Expand abstract only. To check the whats in a group
