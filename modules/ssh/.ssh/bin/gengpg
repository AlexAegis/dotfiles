#!/bin/sh
# create gpg keys

default_comment="Generic key"

echo "%echo Generating a basic OpenPGP key
Key-Type: DSA
Key-Length: 1024
Subkey-Type: ELG-E
Subkey-Length: 1024
Name-Real: AlexAegis
Name-Comment: ${1-$default_comment}
Name-Email: alexaegis@gmail.com
Expire-Date: 0
%commit
%echo done
" >gpgconf.temp

gpg --batch --generate-key gpgconf.temp

rm gpgconf.temp

# gpg --list-secret-keys | grep "^      " | tail -1
