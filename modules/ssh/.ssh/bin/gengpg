#!/bin/sh
# create gpg keys

cat >gpgconf.temp <<EOF
     %echo Generating a basic OpenPGP key
     Key-Type: DSA
     Key-Length: 2048
     Subkey-Type: ELG-E
     Subkey-Length: 2048
     Name-Real: AlexAegis
     Name-Comment: Main gpg key
     Name-Email: alexaegis@gmail.com
     Expire-Date: 0
     %commit
     %echo done
EOF

gpg --batch --generate-key gpgconf.temp

rm gpgconf.temp

# gpg --list-secret-keys | grep "^      " | tail -1
